<div class="navbar">
  <a href="/"><i class="fa-regular fa-house"></i></a>
</div>
<h1>All participations</h1>

<table class='table_participations'>
  <thead>
    <th id='left'>Joueurs</th>
    <% @games.each do |game| %>
      <th><%= I18n.l(game.date, format: "%a %d") %></th>
    <% end %>
    <th id='right'>Commentaires</th>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td>
          <%= player.first_name %> <%= player.last_name %>
        </td>
        <% @games.each do |game| %>
          <td>
            <% if player.participations.exists?(game_id: game.id) %>
              <p><i class="fa-solid fa-xmark"></i></p>
            <% end %>
          </td>
        <% end %>
        <td>
          <%= player.comment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
